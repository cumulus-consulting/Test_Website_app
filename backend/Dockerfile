# ./backend/Dockerfile

FROM node:16
WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .


ARG MONGO_USERNAME
ARG MONGO_PASSWORD
ARG MONGO_HOST
ARG MONGO_PORT
ARG MONGO_DB

ENV MONGO_USERNAME=$MONGO_USERNAME
ENV MONGO_PASSWORD=$MONGO_PASSWORD
ENV MONGO_HOST=$MONGO_HOST
ENV MONGO_PORT=$MONGO_PORT
ENV MONGO_DB=$MONGO_DB

EXPOSE 3000
CMD ["node", "server.js"]
